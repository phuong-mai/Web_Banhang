@model IEnumerable<Web_BanHang.Models.Product>
@{
    ViewBag.Title = "Index";
}

<!-- Slider Area -->
<section class="hero-slider">
    <!-- Single Slider -->
    <div class="single-slider">

    </div>
    <!--/ End Single Slider -->
</section>
<!--/ End Slider Area -->
<!-- Start Product Area -->
<div class="product-area section">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="section-title">
                    <h2>Tất cả sản phẩm</h2>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="product-info">
                    <div class="tab-content" id="myTabContent">
                        <!-- Start Single Tab -->
                        <div class="tab-pane fade show active" id="man" role="tabpanel">
                            <div class="tab-single">
                                <div class="row">
                                    @foreach (var item in Model)
                                    {
                                        
                                            <div class="col-xl-3 col-lg-4 col-md-4 col-12">
                                                <div class="single-product">
                                                    <div class="product-img">
                                                        <a href="product-details.html">
                                                            <img class="default-img" src=@Url.Content("/Content/images/products/p1.jpg") alt="#">
                                                            <img class="hover-img" src=@Url.Content("/Content/images/products/p2.jpg") alt="#">
                                                        </a>
                                                        <div class="button-head">
                                                            <div class="product-action-2">

                                                                @using (Html.BeginForm("Buy", "Home",new { id = item.ID }, FormMethod.Post))
                                                                {
                                                                @Html.AntiForgeryToken()
                                                                <button class="ml-5" type="submit">Thêm vô giỏ hàng</button>
                                                                }

                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="product-content">
                                                        <h3><a href="product-details.html">@Html.DisplayFor(modelItem => item.Product_Name)</a></h3>
                                                        <div class="product-price">
                                                            <span>@Html.DisplayFor(modelItem => item.Price)</span>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                       
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- End Product Area -->