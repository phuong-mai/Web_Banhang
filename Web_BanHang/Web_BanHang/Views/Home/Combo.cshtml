@model IEnumerable<Web_BanHang.Models.Combo>
@{
    ViewBag.Title = "Combo";
}

<!-- Start Product Area -->
<div class="product-area section">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="section-title">
                    <h2>Combo</h2>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="product-info">
                    <div class="tab-content" id="myTabContent">
                        <!-- Start Single Tab -->
                        <div class="tab-pane fade show active" id="man" role="tabpanel">
                            <div class="tab-single">
                                <div class="row">
                                    @foreach (var item in Model)
                                    {
                                        <div class="col-xl-3 col-lg-4 col-md-4 col-12">
                                            <div class="single-product">
                                                <div class="product-img">
                                                    <a href="@(Url.Action("DetailCombo", "", new { id = item.ID }))">
                                                        <img class="default-img" src=@Url.Content("/Content/images/products/" + item.Image_Combo) alt="#">
                                                    </a>
                                                    @using (Html.BeginForm("BuyCombo", "Home", new { id = item.ID }, FormMethod.Post))
                                                    {
                                                        @Html.AntiForgeryToken()
                                                        @*<button class="ml-5" type="submit">Thêm vô giỏ hàng</button>*@
                                                        <button type="submit" class="button-head">
                                                            
                                                                Thêm vào giỏ hàng
                                                            
                                                        </button>
                                                    }
                                                </div>
                                                <div class="product-content">
                                                    <h3><a href="@(Url.Action("DetailCombo", "", new { id = item.ID }))">@Html.DisplayFor(modelItem => item.Combo_Name)</a></h3>
                                                    <div class="product-price">
                                                        <span> @String.Format("{0:0,0} đ", item.totalMoney)</span>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- End Product Area -->